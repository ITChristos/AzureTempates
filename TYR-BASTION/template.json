{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "bastionHosts_TYR_BASTION_name": {
            "defaultValue": "TYR-BASTION",
            "type": "String"
        },
        "publicIPAddresses_TYRNETWORKip819_externalid": {
            "defaultValue": "/subscriptions/bef59999-ac83-46f0-8bff-e6ff5578d673/resourceGroups/TYR/providers/Microsoft.Network/publicIPAddresses/TYRNETWORKip819",
            "type": "String"
        },
        "virtualNetworks_TYR_NETWORK_externalid": {
            "defaultValue": "/subscriptions/bef59999-ac83-46f0-8bff-e6ff5578d673/resourceGroups/TYR/providers/Microsoft.Network/virtualNetworks/TYR-NETWORK",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/bastionHosts",
            "apiVersion": "2020-05-01",
            "name": "[parameters('bastionHosts_TYR_BASTION_name')]",
            "location": "westus2",
            "properties": {
                "dnsName": "bst-5bb089c3-5962-41cc-84de-79d1283be69c.bastion.azure.com",
                "ipConfigurations": [
                    {
                        "name": "IpConf",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[parameters('publicIPAddresses_TYRNETWORKip819_externalid')]"
                            },
                            "subnet": {
                                "id": "[concat(parameters('virtualNetworks_TYR_NETWORK_externalid'), '/subnets/AzureBastionSubnet')]"
                            }
                        }
                    }
                ]
            }
        }
    ]
}