{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachines_Tyr_PDC_name": {
            "defaultValue": "Tyr-PDC",
            "type": "String"
        },
        "disks_Tyr_PDC_OsDisk_1_8632fe74ff6e43a8b106bdb6273c9159_externalid": {
            "defaultValue": "/subscriptions/bef59999-ac83-46f0-8bff-e6ff5578d673/resourceGroups/TYR/providers/Microsoft.Compute/disks/Tyr-PDC_OsDisk_1_8632fe74ff6e43a8b106bdb6273c9159",
            "type": "String"
        },
        "networkInterfaces_tyr_pdc152_externalid": {
            "defaultValue": "/subscriptions/bef59999-ac83-46f0-8bff-e6ff5578d673/resourceGroups/TYR/providers/Microsoft.Network/networkInterfaces/tyr-pdc152",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "name": "[parameters('virtualMachines_Tyr_PDC_name')]",
            "location": "westus2",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS1_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "[concat(parameters('virtualMachines_Tyr_PDC_name'), '_OsDisk_1_8632fe74ff6e43a8b106bdb6273c9159')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "id": "[parameters('disks_Tyr_PDC_OsDisk_1_8632fe74ff6e43a8b106bdb6273c9159_externalid')]"
                        }
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[parameters('virtualMachines_Tyr_PDC_name')]",
                    "adminUsername": "tyr-admin",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true,
                    "requireGuestProvisionSignal": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('networkInterfaces_tyr_pdc152_externalid')]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        }
    ]
}